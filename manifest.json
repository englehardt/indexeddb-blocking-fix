{

  "description": "https://bugzilla.mozilla.org/show_bug.cgi?id=1641521",
  "manifest_version": 2,
  "name": "Twitter Video Fix",
  "version": "1.0",
  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/i/videos/tweet/*"],
      "js": ["twitterVideoFix.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]

}
